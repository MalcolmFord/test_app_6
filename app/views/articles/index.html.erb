<p>
  <%= link_to 'Crete New Article', new_article_path, class:'btn btn-primary' %>
</p>
<tbody>
    <% @articles.each do |article| %>
      <tr>
        <div class="card" style="width: 18rem;">
          <%= image_tag('home_page.jpg') %>
          <div class="card-body">
            <p class="card-text"><%= article.user.username if article.user %></p>
            <h5 class="card-title"><%= article.title %></h5>
            <p class="card-text"><%= article.description %></p>
            <%= link_to 'Delete', article_path(article), method: :delete, data: {confirm: "Are you sure"}, class:'btn btn-primary'%>
            <%= link_to 'Show', article_path(article) ,class:'btn btn-primary'%>
            <%= link_to 'Edit', edit_article_path(article), class:'btn btn-primary'%>
          </div>
        </div>
      </tr>
    <% end %>
  </tbody>
</table>

